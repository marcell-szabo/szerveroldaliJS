<%- include('header', {navbar: 'Class', link: ''}) -%>

        <div class="container mb-5">
            <div class="row">
            <% students.forEach(function(oneStudent){ %> 
                <div class="col-sm-6 offset-sm-0 col-md-4 col-lg-3 col-10 offset-1 mt-3">
                    <div class="card text-center pt-4 p-2 h-100 link shadow">
                        <a href="/points/<%= oneStudent._id %> "><span class="link-spanner"></span></a>
                        <h1 class="card-title text-wrap" name="breaktext"><%= oneStudent.lastname + ' ' + oneStudent.firstname %> </h1>
                        <div class="card-body ps-5 pe-5">
                            <div class=" bd-highlight text-center"><span>Class:</span><span class="space"><%= oneStudent.class %></span></div>
                            <div class=" bd-highlight text-center"><span>Points:</span><span class="space"><%= oneStudent.pointssum %> </span></div>
                            <div class="mt-3">
                                <a class="btn btn-outline-info overlink" href="/students/edit/<%= oneStudent._id %>/" role="button"><i class="fas fa-pencil-alt"></i></a>
                                <a class="btn btn-outline-danger overlink" href="/students/del/<%= oneStudent._id %>/" role="button"><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                    </div>                    
                </div>    
            <% }) %>
                <div class="col-sm-6 offset-sm-0 col-md-4 col-lg-3 col-10 offset-1 mt-3 minheight">
                    <div class="card text-center p-4 h-100 align-items-center centering shadow">
                        <a class="btn btn-outline-dark btn-lg centered" href="/students/new/" role="button"><i class="fas fa-plus fa-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    <%- include('footer') -%> 